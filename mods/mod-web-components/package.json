{
  "name": "@newcar/mod-web-components",
  "version": "0.1.0",
  "description": "",
  "author": "BugDuck Team",
  "license": "Apache-2.0",
  "exports": {
    ".": {
      "dev": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./global": {
      "dev": "./src/global.ts",
      "types": "./dist/global.d.ts",
      "import": "./dist/global.mjs",
      "require": "./dist/global.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "publish": "npm publish",
    "build": "pkgroll --sourcemap --minify && pnpm build:single",
    "build:single": "esbuild --bundle --outfile=dist/browser/newcar.global.js --sourcemap --platform=node --target=chrome63 --format=iife src/global.ts && esbuild --bundle --outfile=dist/browser/newcar.global.min.js --sourcemap --minify --platform=node --target=chrome63 --format=iife src/global.ts",
    "dev": "pkgroll -w"
  },
  "peerDependencies": {
    "canvaskit-wasm": ">=0.39.1"
  },
  "dependencies": {
    "@newcar/basic": "workspace:*",
    "@newcar/core": "workspace:*",
    "@newcar/utils": "workspace:*"
  },
  "devDependencies": {
    "canvaskit-wasm": "0.39.1",
    "esbuild": "^0.20.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
